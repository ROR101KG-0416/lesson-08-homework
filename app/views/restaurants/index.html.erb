<h1>Restaurants</h1>
<%= link_to "Create New Restaurant", new_restaurant_path %>

<p></p>
<table>
  <tr>
    <th>Restaurants</th>
  </tr>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to(restaurant.name, restaurant_path(restaurant)) %></td>
        <td>
          <%= link_to "edit", edit_restaurant_path(restaurant)%>
          <%= link_to "delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure you want to delete this?"}%>
        </td>
      </tr> 
    <% end %>
  </tbody>
</table>