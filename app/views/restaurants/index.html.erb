<h1>Restaurants</h1>

<%= link_to "Create New Restaurant", new_restaurant_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Postal Code</th>
  </tr>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to(restaurant.name, restaurant_path(restaurant)) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.postal_code %></td>
        <td>
          <%= link_to "edit", edit_restaurant_path(restaurant) %>
          <%= link_to "delete", restaurant_path(restaurant), data: {confirm: "Are you sure you want to delete this restaurant?"}, method: :delete %>
        </td>
      </tr> 
    <% end %>
  </tbody>
</table>