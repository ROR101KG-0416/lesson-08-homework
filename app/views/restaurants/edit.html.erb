 <h1>Edit Restaurant</h1>
 <!-- we can specify the action type using the {action: :update} hash as a value for **:url** -->
 <%= form_for @restaurant, url: {action: :update} do |f| %>
   <p>
     <%= f.label :name %><br>
     <%= f.text_field :name %>
   </p>
   <p>
     <%= f.label :street %><br>
     <%= f.text_field :street %>
  </p>
   <p>
     <%= f.label :city %><br>
     <%= f.text_field :city %>
  </p>
   <p>
     <%= f.label :country %><br>
     <%= f.text_field :country %>
   </p>
    <p>
     <%= f.label :postal_code %><br>
     <%= f.text_field :postal_code %>
   </p>
   <%= f.submit "Update" %>
<% end %>